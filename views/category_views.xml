<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Category Form View -->
    <record id="view_event_category_form" model="ir.ui.view">
        <field name="name">event.mgmt.category.form</field>
        <field name="model">event.mgmt.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Category Name"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="Category Code"/>
                        </h2>
                        <div class="o_row">
                            <field name="registration_url" widget="CopyClipboardChar" readonly="1"/>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="event_id"/>
                            <field name="max_registrations"/>
                            <field name="current_registrations"/>
                        </group>
                        <group>
                            <field name="requires_approval"/>
                            <field name="auto_approve" attrs="{'invisible': [('requires_approval', '=', False)]}"/>
                            <field name="require_photo"/>
                            <field name="require_id"/>
                            <field name="enable_ai_validation"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Custom Fields" name="custom_fields">
                            <field name="custom_fields">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="field_key"/>
                                    <field name="field_type"/>
                                    <field name="required"/>
                                    <field name="placeholder"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Email Templates" name="email_templates">
                            <group>
                                <group>
                                    <field name="confirmation_template_id" domain="[('model', '=', 'event.mgmt.registration')]"/>
                                    <field name="approval_template_id" domain="[('model', '=', 'event.mgmt.registration')]"/>
                                    <field name="rejection_template_id" domain="[('model', '=', 'event.mgmt.registration')]"/>
                                </group>
                            </group>
                        </page>
                        <page string="Registrations" name="registrations">
                            <field name="registration_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                    <field name="email"/>
                                    <field name="state"/>
                                    <field name="create_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Category Tree View -->
    <record id="view_event_category_tree" model="ir.ui.view">
        <field name="name">event.mgmt.category.tree</field>
        <field name="model">event.mgmt.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="event_id"/>
                <field name="registration_url" widget="CopyClipboardChar"/>
                <field name="max_registrations"/>
                <field name="current_registrations"/>
                <field name="requires_approval"/>
            </tree>
        </field>
    </record>

    <!-- Category Search View -->
    <record id="view_event_category_search" model="ir.ui.view">
        <field name="name">event.mgmt.category.search</field>
        <field name="model">event.mgmt.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="event_id"/>
                <separator/>
                <filter string="Requires Approval" name="requires_approval" domain="[('requires_approval', '=', True)]"/>
                <filter string="AI Validation" name="ai_validation" domain="[('enable_ai_validation', '=', True)]"/>
                <filter string="Photo Required" name="require_photo" domain="[('require_photo', '=', True)]"/>
                <filter string="ID Required" name="require_id" domain="[('require_id', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Event" name="group_by_event" context="{'group_by': 'event_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Category Action -->
    <record id="action_event_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">event.mgmt.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first event category
            </p>
        </field>
    </record>
</odoo>